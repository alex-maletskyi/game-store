//standard setup for a Node.js project
{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "target": "ES6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,

    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}